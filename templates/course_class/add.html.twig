{% extends "base.html.twig" %}

{% block title %} Add Book {% endblock %}

{% block body %}
<div class="container-fluid col-8 mt-3">
   <h3 class="text-center mt-5">ADD NEW BOOK</h3>
      {{ form_start(form) }}
         <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.dateStart) }}
            {{ form_widget(form.dateStart,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.dateEnd) }}
            {{ form_widget(form.dateEnd,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.teacherID) }}
            {{ form_widget(form.teacherID,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
            {{ form_label(form.courseID) }}
            {{ form_widget(form.courseID,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </div>
         <div class="form-group">
         <p>
            {{ form_label(form.studentID) }}
            {{ form_widget(form.studentID,
               {
                  'attr': { 'class' : 'form-control'}
               })
            }}
         </p>
            
         </div>
         <div class="form-group text-center mt-3 mb-4">
            <button class="btn btn-primary" type="submit">ADD</button>
         </div>
      {{ form_end(form) }}
</div>
{% endblock %}