{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
	
		<h1 class="text-success text-center text-capitalize" style="font-size: 35px;"><b>COURSE LIST</b></h1>
		{# {% if is_granted('ROLE_STAFF') %} #}
		<a class="btn btn-info mt-2" href="{{ path('course_add') }}" style="font-size: 25px;">Add Course</a>
		{# {% endif %} #}
		{# <a class="btn btn-outline-success mt-2" href="{{ path('book_asc') }}">Tang</a>
		<a class="btn btn-outline-success mt-2" href="{{ path('book_desc') }}">Giam</a> #}
		<table class="table table-striped text-center mt-2" >
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
                    <th>Description</th>
					<th width="40%">Menu</th>
				</tr>
			</thead>
			<tbody >
				{% for c in course %}
					<tr style="font-family: Segoe UI; font-size: 18px;">
						<td>{{ c.id }}</td>
						<td>{{ c.name }}</td>
                        <td>{{ c.description }}</td>
						{# {% if is_granted('ROLE_ADMIN') %} #}
							<td>
                                <a class="btn btn-success" href="{{ path('course_detail', {'id': c.id}) }}">View</a>
								<a class="btn btn-warning" href="{{ path('course_edit', {'id': c.id}) }}">Edit</a>
								<a class="btn btn-danger" href="{{ path('course_delete', {'id': c.id}) }}" onclick="return confirm('Are you sure to delete this course ?')">Delete</a>
							</td>
						{# {% endif %} #}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
