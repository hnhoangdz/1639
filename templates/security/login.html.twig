{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block header %}{% endblock %}
{% block body %}
	<div class="container col-5 mt-5 ">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			{% if app.user %}
				<center>
					<div class=" mb-3 thuong ">
						You are logged in as
						{{ app.user.username }},						
					</div>
                    <a href="{{ path('app_logout') }}" class="btn btn-lg btn-primary">Logout</a>
				</center>

			{% endif %}

			<h1 class="h2 mb-3 font-weight-normal text-center">
				<b>Please sign in</b>
			</h1>
			<label class="mt-3" for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			<label class="mt-3" for="inputPassword">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
			        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			        See https://symfony.com/doc/current/security/remember_me.html
			    #}
			<div class="checkbox mb-3 mt-4 text-center">
				<label>
					<input type="checkbox" name="_remember_me">
					Remember me
				</label>
			</div>
			<center>
				<button class="btn btn-lg btn-primary mt-4" type="submit">
					Sign in
				</button>
			</center>

		</form>
	</div>
{% endblock %}
