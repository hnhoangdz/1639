{% extends 'base.html.twig' %}
{% block title %}
	View Admin
{% endblock %}
{% block body %}
	<div class="container col-md-6 mt-3">
		<h1 class="text-success text-center text-capitalize" style="font-size: 35px;"><b>Admin Detail</b></h1>
		<div class="row align-items-start">
			<div class="col-9">
				<a class="btn btn-success mt-2" href="{{ path('admin_index') }}" style="font-size: 25px;"> < Admin list</a>
			</div>
			<div class="col-1">
				<a class="btn btn-warning mt-2" href="{{ path('admin_edit', {'id': admin.id}) }}" style="font-size: 25px;">Edit</a>
			</div>
			<div class="col-1 ml-0">
				<a class="btn btn-danger mt-2" href="{{ path('admin_delete', {'id': admin.id}) }}" onclick="return confirm('Are you sure to delete this book ?')" style="font-size: 25px;">Delete</a>
			</div>
        <table class="table table-striped text-center mt-2">
			<thead>
				<tr>
					<th>Name</th>
					<th>Avatar</th>
					<th>Email</th>
					<th>Date of Birth</th>
				</tr>
			</thead>
			<tbody>
				<tr style="font-family: Segoe UI; font-size: 18px;">
					<td>{{ admin.name }}</td>
					<td>
						<img src="{{ asset('img/admin/'~admin.avatar)}}" alt="avatar" width="100" height="120">
					</td>
					<td>{{ admin.email }}</td>
					<td>{{ admin.birthday|date('d/m/Y') }}</td>
				</tr>
			</tbody>
		</table>
		</div>
	</div>
{% endblock %}
