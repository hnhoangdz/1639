{% extends 'base.html.twig' %}

{% block body %}
	<div class="container col-md-6 mt-3">
	
		<h1 class="text-success text-center text-capitalize" style="font-size: 35px;"><b>ADMIN LIST</b></h1>
		{# {% if is_granted('ROLE_STAFF') %} #}
		<a class="btn btn-info mt-2" href="{{ path('course_class_add') }}" style="font-size: 25px;">Add Admin</a>
		{# {% endif %} #}
		{# <a class="btn btn-outline-success mt-2" href="{{ path('book_asc') }}">Tang</a>
		<a class="btn btn-outline-success mt-2" href="{{ path('book_desc') }}">Giam</a> #}
		<table class="table table-striped text-center mt-2" >
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
                    <th>Avatar</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
					<th>Menu</th>

				</tr>
			</thead>
			<tbody >
				{% for a in admins %}
					<tr style="font-family: Segoe UI; font-size: 18px;">
						<td>{{ a.id }}</td>
						<td>{{ a.name }}</td>
                        <td>
                        <img src="{{ asset('img/admin/'~a.avatar )}}" alt="avatar" width="100" height="120">
                        </td>
                        <td>{{ a.email }}</td>
                        <td>{{ a.birthday|date('d/m/Y') }}</td>
						{# {% if is_granted('ROLE_ADMIN') %} #}
							<td>
                                <a class="btn btn-success" href="{{ path('course_class_detail', {'id': a.id}) }}">View</a>
								<a class="btn btn-warning" href="{{ path('course_class_edit', {'id': a.id}) }}">Edit</a>
								<a class="btn btn-danger" href="{{ path('course_class_delete', {'id':a.id}) }}" onclick="return confirm('Are you sure to delete this book ?')">Delete</a>
							</td>
						{# {% endif %} #}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
